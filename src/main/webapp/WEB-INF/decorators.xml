<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/layouts">
	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
		<excludes>
			<pattern>/login</pattern>
			<pattern>/pagina/*</pattern>
		</excludes>
	</decorator>

	<decorator name="login" page="login.jsp">
		<pattern>/login</pattern>
		<pattern>/sobre</pattern>
	</decorator>
	
	<decorator name="paginas" page="pagina.jsp">
		<pattern>/pagina/*</pattern>
	</decorator>
</decorators>