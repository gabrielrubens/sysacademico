<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.url">jdbc:hsqldb:mem:prisila</property>
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbc.JDBCDriver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<!-- entidades -->
		<mapping class="com.prisila.modelo.entidade.Usuario" />
		<mapping class="com.prisila.modelo.entidade.Aluno" />
		<mapping class="com.prisila.modelo.entidade.Responsavel" />
		<mapping class="com.prisila.modelo.entidade.Curso" />
		<mapping class="com.prisila.modelo.entidade.Matricula" />
		<mapping class="com.prisila.modelo.entidade.Professor" />
		<mapping class="com.prisila.modelo.entidade.AulaMatricula" />
		<mapping class="com.prisila.modelo.entidade.Aula" />
		<mapping class="com.prisila.modelo.entidade.HorarioProfessor" />
		<mapping class="com.prisila.modelo.entidade.Sala" />
	</session-factory>
</hibernate-configuration>